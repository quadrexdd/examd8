// Fields config
function likebtn_default_values_from_config($config)
{
  $default_values = array();
  
  foreach ($config as $key => $value) {
    //echo 'key'.$key.' | ';
    if (!preg_match("/^likebtn_/", $key)) {
      continue;
    }
    if (is_array($value)) {
      foreach ($value as $sub_key => $sub_value) {
        $default_values[$sub_key] = $sub_value;
      }
    } else {
      $default_values[$key] = $value;
    }
  }

  return $default_values;
}

function likebtn_parse_field_identifier($identifier)
{
  $identifier = preg_replace("/^likebtn_/", '', $identifier);

  preg_match('/^(.*)_(\d+)_field_(.*?)(?:_index_(\d+))?$/', $identifier, $identifier_parts);

  $entity_type = '';
  if (!empty($identifier_parts[1])) {
    $entity_type = $identifier_parts[1];
  }

  $entity_id = '';
  if (!empty($identifier_parts[2])) {
    $entity_id = $identifier_parts[2];
  }

  $field_id = '';
  if (!empty($identifier_parts[3])) {
    $field_id = $identifier_parts[3];
  }

  $field_index = '';
  if (!empty($identifier_parts[4])) {
    $field_index = $identifier_parts[4];
  }

  return array($entity_type, $entity_id, $field_id, $field_index);
}

function likebtn_get_count($entity)
{
  $controller = new \Drupal\likebtn\Controller\LikeBtnController();
  return $controller->likebtn_get_count($entity);
}

